{
  "name": "@maf/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./rpc": {
      "types": "./dist/rpc.d.ts",
      "default": "./dist/rpc.js"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "start": "node dist/index.js",
    "test": "echo 'no tests'"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@maf/domain": "workspace:*",
    "hono": "^4.6.10"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.9.2"
  }
}
